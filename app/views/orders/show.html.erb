<table class="table table-bordered show-product">
  <thead>
    <tr>
      <th>订单号</th>
      <th>数量</th>
      <th>价格</th>
      <th>订单状态</th>
      <th>收货人姓名</th>
      <th>收货地址</th>
      <th>收货人电话</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.order.uuid %></td>
        <td><%= item.quantity%></td>
        <td><%= item.price %></td>
        <td><%= item.order.status %></td>
        <td><%= @order.user.name %></td>
        <td><%= item.order.order_address %></td>
        <td><%= item.order.order_phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>