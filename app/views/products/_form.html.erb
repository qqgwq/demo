<%= form_for @product do |f| %>

  <div class="form-group">
    <%= f.label :Name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :Price %>
    <%= f.text_field :price %>
  </div>

  <div class="form-group">
    <%= f.label :Category %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
  </div>

  <%= f.submit 'Save' %>
<% end %>